@model Survey
@{
    ViewData["Title"] = "Dojo Survey";
}

<form asp-action="Process" asp-controller="Survey" method="post" class="container w-50 my-3 p-4 border bg-light rounded border-dark">

    <div class="input-group mb-3">
        <label asp-for="Name" class="input-group-text">Your Name<span class="text-danger">*</span></label>
        <input asp-for="Name" class="form-control">
    </div>

    <div class="input-group mb-3">
        <label asp-for="Location" class="input-group-text" id="basic-addon2">Dojo Location<span class="text-danger">*</span></label>
        <select asp-for="Location" class="form-control" aria-label=".form-select-lg example">
            <option selected></option>
            <option value="Chicago">Chicago</option>
            <option value="Bellevue">Bellevue</option>
            <option value="San Jose">San Jose</option>
            <option value="Burbank">Burbank</option>
            <option value="Online">Online</option>
        </select>
    </div>

    <div class="input-group mb-3">
        <label asp-for="StartDate" class="input-group-text">Start Date<span class="text-danger">*</span></label>
        <input asp-for="StartDate" type="date" class="form-control">
    </div>

    <div class="input-group mb-3">
        <label asp-for="Language" class="input-group-text" id="basic-addon2">Favorite Language<span class="text-danger">*</span></label>
        <select asp-for="Language" class="form-control" aria-label=".form-select-lg example">
            <option selected></option>
            <option value="Python">Python</option>
            <option value="JavaScript">JavaScript</option>
            <option value="C#">C#</option>
        </select>
    </div>

    <div class="input-group mb-3">
        <label asp-for="Comments" class="input-group-text">Comments:</label>
        <textarea asp-for="Comments" class="form-control" ></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

    <div class="mt-3"><span asp-validation-for="Name" class="text-danger"></span></div>
    <div class="mt-3"><span asp-validation-for="Location" class="text-danger"></span></div>
    <div class="mt-3"><span asp-validation-for="StartDate" class="text-danger"></span></div>
    <div class="mt-3"><span asp-validation-for="Language" class="text-danger"></span></div>
    <div class="mt-3"><span asp-validation-for="Comments" class="text-danger"></span></div>


</form>
