@model User

<form asp-action="CreateUser" asp-controller="Home" method="post"
    class="container my-3 p-4 border bg-success bg-opacity-25 rounded border-light">

    <h2 class="fw-light">Create new user</h2>
    <div class="input-group mb-3">
        <label asp-for="FirstName" class="input-group-text">First Name</label>
        <input asp-for="FirstName" class="form-control">
    </div>

    <div class="input-group mb-3">
        <label asp-for="LastName" class="input-group-text">Last Name</label>
        <input asp-for="LastName" class="form-control">
    </div>

    <div class="input-group mb-3">
        <label asp-for="Email" class="input-group-text">Email Address</label>
        <input asp-for="Email" type="email" class="form-control">
    </div>

    <div class="input-group mb-3">
        <label asp-for="Password" class="input-group-text">Password</label>
        <input asp-for="Password" type="password" class="form-control">
    </div>

    <div class="input-group mb-3">
        <label asp-for="PasswordConfirm" class="input-group-text">Confirm Password</label>
        <input asp-for="PasswordConfirm" type="password" class="form-control">
    </div>

    <button type="submit" class="btn btn-success">Register</button>

    <div class="mt-1"><span asp-validation-for="FirstName" class="text-danger"></span></div>
    <div class="mt-1"><span asp-validation-for="LastName" class="text-danger"></span></div>
    <div class="mt-1"><span asp-validation-for="Email" class="text-danger"></span></div>
    <div class="mt-1"><span asp-validation-for="Password" class="text-danger"></span></div>
    <div class="mt-1"><span asp-validation-for="PasswordConfirm" class="text-danger"></span></div>

</form>
