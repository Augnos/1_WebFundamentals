<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @* Update title *@
    <title>@ViewData["Title"] - Products and Categories</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* Update CSS file location *@
    <link rel="stylesheet" href="~/_30_ProductsAndCategories.styles.css" asp-append-version="true" />
</head>

<body class="bg-dark text-light p-0 m-0">
    <div class="container-fluid d-flex flex-column justify-content-between min-vh-100">
        @await Html.PartialAsync("_Navbar")


        <main role="main" class="pb-3 h-100">
            @RenderBody()
        </main>

        <footer class="text-center">
            <p>©@DateTime.Now.Year Augnos</p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
