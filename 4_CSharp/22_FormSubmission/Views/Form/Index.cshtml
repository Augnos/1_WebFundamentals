@model Form
@{
    ViewData["Title"] = "Dojo Survey";
}

<form asp-action="Process" asp-controller="Form" method="post" class="container my-3 p-4 border bg-light rounded border-dark">

    <div class="input-group mb-3">
        <label asp-for="Name" class="input-group-text">Name</label>
        <input asp-for="Name" class="form-control">
    </div>

    <div class="input-group mb-3">
        <label asp-for="Email" class="input-group-text">Email Address</label>
        <input asp-for="Email" type="email" class="form-control">
    </div>

    <div class="input-group mb-3">
        <label asp-for="Birthday" class="input-group-text">Date of Birth</label>
        <input asp-for="Birthday" type="date" class="form-control">
    </div>

    <div class="input-group mb-3">
        <label asp-for="Password" class="input-group-text">Password</label>
        <input asp-for="Password" type="password" class="form-control">
    </div>

    <div class="input-group mb-3">
        <label asp-for="FavNumber" class="input-group-text">Favorite Prime Number</label>
        <input asp-for="FavNumber" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

    <div class="mt-3"><span asp-validation-for="Name" class="text-danger"></span></div>
    <div class="mt-3"><span asp-validation-for="Email" class="text-danger"></span></div>
    <div class="mt-3"><span asp-validation-for="Birthday" class="text-danger"></span></div>
    <div class="mt-3"><span asp-validation-for="Password" class="text-danger"></span></div>
    <div class="mt-3"><span asp-validation-for="FavNumber" class="text-danger"></span></div>


</form>
